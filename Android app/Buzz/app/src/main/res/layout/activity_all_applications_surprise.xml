<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/surprise_app"
    tools:context=".AllApplicationsSurprise">

    <ImageView
        android:id="@+id/backToAllApps"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@mipmap/back_foreground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />
    <ImageView
        android:id="@+id/logout"
        android:layout_width="70dp"
        android:layout_height="130dp"
        android:src="@raw/logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/quizButton"
        android:layout_width="175dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/magicalMusicPlayerButton"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/quiz_foreground" />

    <ImageView
        android:id="@+id/magicalMusicPlayerButton"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:contentDescription="Magical Musical Player"
        android:src="@mipmap/magical_music_player_foreground" />

</RelativeLayout>